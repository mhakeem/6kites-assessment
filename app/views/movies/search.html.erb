<div class="container" style="margin-top: 20px">
  <form action="/search" method="post" id="search-form">
    <div class="form-group">

    <div class="input-group">
      <input class="form-control" type="text" name="term" placeholder="Enter search text">
      <div class="input-group-append">
        <button class="btn btn-outline-primary" type="submit">Submit</button>
      </div>
    </div>

    </div>
  </form>

  <% if (@movies.length > 0) %>
    <div style="margin-bottom: 12px">SHOWING FIRST <%= @movies.length %> RESULTS</div>

    <% if @term %>
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <li class="page-item"><a class="page-link" href="#">Previous</a></li>
          <%# <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li> %>
          <li class="page-item">
            <%= link_to 'Next', search_path(term: @term, page: @page.to_i+1), class: 'page-link' %>
          </li>
        </ul>
      </nav>  
    <% end %>
    
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-md-3">
          <div class="card mb-3" style="width: 14rem;">
            <%= image_tag movie['Poster'], class: 'card-img-top', style: 'height: 18rem' %>
            <div class="card-body">
              <small class="card-subtitle mb-2 text-muted"><%= movie['Year'] %></small>
              <h6 class="card-title"><%= movie['Title'] %></h6>
              <%= link_to 'Details', movie_path(movie['imdbID']), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  
</div>
