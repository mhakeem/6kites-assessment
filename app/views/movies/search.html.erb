<div class="container" style="margin-top: 20px">

  <%= form_with url: search_path, local: true, id: 'search-form' do |f| %>
    <div class="form-group">

      <div class="input-group">
        <%= hidden_field_tag :something, 'vals' %>
        <%= f.text_field :term, class: "form-control", placeholder: 'Enter search text' %>
        <div class="input-group-append">
          <%= f.submit 'Search', class: "btn btn-outline-primary" %>
        </div>
      </div>

    </div>
  <% end %>

  <% if (@movies.length > 0) %>
    <div style="margin-bottom: 12px">SHOWING <%= @movies.length %> RESULTS PER PAGE</div>
    <div style="margin-bottom: 12px">Total search results: <%= @total_results %></div>
    <%= render 'paginate' %>

    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col col-md-3">
          <div class="card mb-3" style="width: 14rem;">
            <%= image_tag movie.poster, class: 'card-img-top', style: 'height: 18rem' %>
            <div class="card-body">
              <small class="card-subtitle mb-2 text-muted"><%= movie.year %></small>
              <h6 class="card-title"><%= movie.title %></h6>
              <%= link_to 'Details', movie_path(movie.imdb_id), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%= render 'paginate' %>
  <% end %>

</div>
