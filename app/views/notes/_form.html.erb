<div class="container">

  <p></p>
  
  <%= form_with model: @note, local: true do |f| %>
    <div class="form-group">
      <%= f.label 'Note Entry' %>
      <%= f.text_area :entry, class: "form-control", rows: 3 %>
    </div>
    <% if @movie_id %>
      <%= hidden_field_tag :movie_id, @movie_id %>
    <% end %>
    <%= f.submit 'Submit', class: "btn btn-primary" %>
  <% end %>
</div>